@model Project.Models.OrderDetail

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Payment)
        </dt>
        <dd class = "col-sm-10">          
            @{
                string price = Model.Payment.FormatNumber();
            }
            @price
        </dd>     
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Drink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Drink.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
