            </div>*@
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Drink
                            </th>
                            <th>Quantity</th>
                            <th>Toppings</th>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Payment</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.OrderDetails.Count; ++i)
                        {
                            var detail = Model.OrderDetails.ElementAt(i);
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@(detail.Drink.Name)</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.Size.ToString()</td>
                                <td>@detail.Payment.FormatNumber()</td>
                                <td>@((detail.Quantity * detail.Payment).FormatNumber())</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <h4>Payment: @ViewBag.Total</h4>
            </div>
            <div class="form-group">
                <input type="submit" value="Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
